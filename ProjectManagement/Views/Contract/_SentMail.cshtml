@model ProjectManagement.Models.MailRequest


<!-- Modal -->
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal1" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Forgot Password ?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-area="Contract" asp-action="SentMail" method="post">
                <div class="modal-body">
                    @*<p>Enter your e-mail address below to reset your password.</p>*@
                    @*<input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">*@
                    <label asp-for="ToEmail"></label>
                    <input asp-for="ToEmail" placeholder="Email" autocomplete="off" class="form-control  placeholder-no-fix" />
                    <label asp-for="Subject"></label>
                    <input asp-for="Subject" placeholder="Email" autocomplete="off" class="form-control  placeholder-no-fix" />
                    <label asp-for="Body"></label>
                    <textarea asp-for="Body" placeholder="Email" autocomplete="off" class="form-control  placeholder-no-fix" />
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                    <button class="btn btn-success" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- modal -->
