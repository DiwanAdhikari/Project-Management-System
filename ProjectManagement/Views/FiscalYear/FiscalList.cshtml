@model IEnumerable<FiscalYearViewModel>
@inject IUtility _Utility

@{
    ViewData["Title"] = "Fiscal Year";
    int i = 1;
}

<div class="xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        @*<h4>@ViewData["Title"]</h4>*@
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="FiscalYear" asp-action="FiscalList">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Simple Datatable start -->

        <div class="main-card mb-3 card">
            <div class="pd-20">
                <p class="mb-0"><a class="btn btn-primary pull-left btn-add" asp-action="CreateFiscal"><i class="fa fa-plus"></i> &nbsp; Add</a></p>
            </div>
            <div class="pb-20">
                <table class="data-table table stripe hover nowrap">
                    <thead>
                        <tr>
                            <th>S.N</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LocalName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BsStartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BsEndDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LocalName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BsStartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BsEndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    <a class="text-primary" asp-action="CreateFiscal" asp-route-id="@item.Id"><i class="dw dw-edit2"></i> Edit</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Simple Datatable End -->
    </div>
</div>