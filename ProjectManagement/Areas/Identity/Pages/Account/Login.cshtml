<body class="login-body" style="background: url(/Pictures/pm.jpg);background-size:cover;background-repeat:no-repeat;height:100vh; overflow:hidden ">

    <div class="container">
        <form id="account" class="form-signin" method="post">
            <h2 class="form-signin-heading">sign in now</h2>
            <div class="login-wrap">
                @*<input type="text" class="form-control" placeholder="User ID" autofocus>
                    <input type="password" class="form-control" placeholder="Password">*@

                <input asp-for="Input.Email" class="form-control" placeholder="User ID" autofocus />
                <br />
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <label class="checkbox">
                    @*<input type="checkbox" value="remember-me"> Remember me*@
                    @*<input asp-for="Input.RememberMe" type="checkbox" value="remember-me" />Remember me*@

                    <span class="pull-left">
                        <a data-toggle="modal" href="#myModal"> Forgot Password?</a>

                    </span>
                    <br />
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Sign in</button>

                <!--<div class="registration">
                    Don't have an account yet?-->
                <!--<a class="" href="registration.html">-->
                <!--<div>
                        <a asp-page="./Register">

                            Create an account

                        </a>
                    </div>
                </div>-->

            </div>


        </form>

    </div>


    <!-- Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Forgot Password ?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-area="Identity" asp-page="/Account/ForgotPassword" method="post">
                    <div class="modal-body">
                        @*<p>Enter your e-mail address below to reset your password.</p>*@
                        @*<input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">*@
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" placeholder="Email" autocomplete="off" class="form-control  placeholder-no-fix" />
                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                        <button class="btn btn-success" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/flatlab/js/jquery.js"></script>
    <script src="~/flatlab/js/bootstrap.min.js"></script>


</body>
